<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jarvis_1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/jarvis"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload your pdf here so that you will be able ask your queries on that."
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/magicBlue"
        />

    <Button
        android:id="@+id/uploadPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload PDF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/directChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direct Chat"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"/>


</LinearLayout>